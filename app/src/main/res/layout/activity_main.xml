<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:padding="4dp"
    android:orientation="vertical"
    android:background="@color/background"
    android:id="@+id/linear_main_layour"

    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#397F66"
        android:layout_weight="1"
        android:layout_marginBottom="1dp">
        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:background="#ffffff"
            android:layout_weight="2"
            android:id="@+id/name"
            android:textSize="14sp"
            android:hint="Name"
            android:gravity="center"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:inputType="numberDecimal"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:background="#ffffff"
            android:layout_weight="1.5"
            android:id="@+id/deposit"
            android:hint="Diposit"
            android:textSize="14sp"
            android:gravity="center"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:inputType="numberDecimal"
            android:background="#ffffff"
            android:layout_weight="1"
            android:id="@+id/meal"
            android:textSize="14sp"
            android:hint="Mill"
            android:gravity="center"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1.5"
            android:background="@drawable/custom_button"
            android:textSize="@dimen/TextSize"
            android:textColor="@drawable/text_color"
            android:text="Add"
            android:id="@+id/add"
            android:onClick="addToList"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_marginBottom="1dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#007F66"
            android:padding="3dp"
            android:layout_marginRight="1dp"
            android:textColor="#ffffff"
            android:layout_weight="1"
            android:textSize="@dimen/TextSize"
            android:text="No"
            android:id="@+id/sirialNo"
            android:gravity="center"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#007F66"
            android:padding="3dp"
            android:layout_marginRight="1dp"
            android:textColor="#ffffff"
            android:layout_weight="4"
            android:textSize="@dimen/TextSize"
            android:text="Name"
            android:id="@+id/nameTv"
            android:gravity="center"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#007F66"
            android:padding="3dp"
            android:layout_marginRight="1dp"
            android:textColor="#ffffff"
            android:layout_weight="2.5"
            android:textSize="@dimen/TextSize"
            android:text="Diposit"
            android:id="@+id/dipositTv"
            android:gravity="center"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#007F66"
            android:padding="3dp"
            android:layout_marginRight="1dp"
            android:textColor="#ffffff"
            android:layout_weight="2"
            android:textSize="@dimen/TextSize"
            android:text="Mill"
            android:id="@+id/millTv"
            android:gravity="center"/>
    </LinearLayout>


    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8">

    </ListView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Calculate Mill"
        android:layout_weight="1.5"
        android:textColor="@drawable/text_color"
        android:textSize="@dimen/TextSize"
        android:background="@drawable/custom_button"
        android:layout_gravity="bottom"
        android:onClick="calculate"/>



</LinearLayout>